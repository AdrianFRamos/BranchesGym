<Window x:Class="BranchesGym.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <!-- Campo de Usuário -->
            <TextBox x:Name="UsernameTextBox"
                     Text="Usuário"
                     Foreground="Gray"
                     GotFocus="UsernameTextBox_GotFocus"
                     LostFocus="UsernameTextBox_LostFocus"
                     Margin="0,0,0,10" />

            <!-- Campo de Email -->
            <TextBox x:Name="EmailTextBox"
                     Text="Email"
                     Foreground="Gray"
                     GotFocus="EmailTextBox_GotFocus"
                     LostFocus="EmailTextBox_LostFocus"
                     Margin="0,0,0,10" />

            <!-- Campo de Senha -->
            <PasswordBox x:Name="PasswordBox"
                         Tag="Senha"
                         GotFocus="PasswordBox_GotFocus"
                         LostFocus="PasswordBox_LostFocus"
                         Margin="0,0,0,10" />

            <Button Content="Cadastrar" Click="RegisterButton_Click" Margin="0,10,0,0" Height="40" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="BranchesGym.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BranchesGym.Views"
        xmlns:lc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Dashboard" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:SidebarView Grid.Column="0">
            
        </views:SidebarView>

        <!-- Dashboard Gráficos -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Dashboard de Desempenho" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

            <lc:CartesianChart Height="200" Margin="0,10,0,0" />
            <lc:CartesianChart Height="200" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>

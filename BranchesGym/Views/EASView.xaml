<Window x:Class="BranchesGym.Views.EASView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ciclo de EAS" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <!-- Substância -->
            <TextBox x:Name="SubstanceTextBox"
                     Text="Substância"
                     Foreground="Gray"
                     GotFocus="SubstanceTextBox_GotFocus"
                     LostFocus="SubstanceTextBox_LostFocus"
                     Margin="0,0,0,10" />

            <!-- Dosagem -->
            <TextBox x:Name="DosageTextBox"
                     Text="Dosagem (mg)"
                     Foreground="Gray"
                     GotFocus="DosageTextBox_GotFocus"
                     LostFocus="DosageTextBox_LostFocus"
                     Margin="0,0,0,10" />

            <Button Content="Salvar Ciclo" Click="SaveCycleButton_Click" Margin="0,10,0,0" Height="40" />
        </StackPanel>
    </Grid>
</Window>

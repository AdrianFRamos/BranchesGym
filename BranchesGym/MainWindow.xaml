<Window x:Class="BranchesGym.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BranchesGym.Views"
        Title="Branches Gym" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <views:SidebarView Grid.Column="0" />

        <!-- Dashboard -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Bem-vindo ao Branches Gym" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />
            <TextBlock Text="Selecione uma opção na sidebar para começar." FontSize="16" />
        </StackPanel>
    </Grid>
</Window>
